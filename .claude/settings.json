{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[HAL 9000 ONLINE]' && hal9000 services status 2>/dev/null"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "hal9000 services status 2>/dev/null || echo '⚠️ [HAL ALERT] Service failure detected. Run: hal9000 services diagnose'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(hal9000:*)"
    ]
  }
}
